extends layout
block content
  div.wrapper
    .container-fluid
      div.row
        p &nbsp;
      div.row
        .col-lg-12
          .panel.panel-default
            .panel-heading
              h2
                b Project: 
                |#{project.name}
              h4 
                b Path: 
                |#{project.path} 
                br 
                br 
                b Date: 
                |#{date}
            .panel-body
              if project
                .table-responsive.table-bordered
                  table.table
                    thead
                      tr
                        th Path
                        th MI
                        th Magnitude
                    tbody
                    - each file, i in files
                      tr(id="#{file.id}")
                        td #{file.path}
                        td #{file.mi}
                        td #{file.magnitude}
              else
                p You don't have any projects.
      if invalid
        p.bg-danger El ID ingresado es inv√°lido.
