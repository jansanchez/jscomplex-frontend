extends layout
block content
  div.wrapper
    .container-fluid
      div.row
        p &nbsp;
      div.row
        .col-lg-12
          .panel.panel-default
            .panel-heading
              h2
                b Project: 
                |#{project.name}
              h4 
                b Path: 
                |#{project.path}
            .panel-body
              if project
                .table-responsive.table-bordered
                  table.table
                    thead
                      tr
                        th Date
                        th # Files
                        th Average MI
                    tbody
                    - each review, i in project.reviews
                      tr(id="#{review.id}")
                        td
                          a(href="/project-date/#{review.id}", title="#{review.date}") #{review.date}
                        td #{review.files.length}
                        td #{average[i].average}
              else
                p You don't have any projects.
      if invalid
        p.bg-danger El ID ingresado es inv√°lido.
